#!/bin/sh

# Run prettier formatting before push
echo "Running prettier formatting..."
npm run fmt

# Check if prettier made any changes
if [ -n "$(git diff --name-only)" ]; then
  echo "ğŸ“ Formatting changes detected, adding to current commit..."
  git add -A
  git commit --amend --no-edit
  echo "âœ… Formatting changes added to current commit"
else
  echo "âœ… Code already formatted"
fi

exit 0

